{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"resolveJsonModule": true,
		"paths": {
			"@nutritionist": ["apps/nutritionist/src"],
			"@nutritionist/*": ["apps/nutritionist/src/*"],
			"@common": ["libs/common/src"],
			"@common/*": ["libs/common/src/*"],
			"@util": ["libs/util/src"],
			"@util/*": ["libs/util/src/*"],
			"@contract": ["libs/contract/src"],
			"@contract/*": ["libs/contract/src/*"],
			"@infrastructure": ["libs/infrastructure/src"],
			"@infrastructure/*": ["libs/infrastructure/src/*"],
			"@config/app-config": ["libs/config/app-config/src"],
			"@config/app-config/*": ["libs/config/app-config/src/*"],
			"@config/s3storage": ["libs/config/s3storage/src"],
			"@config/s3storage/*": ["libs/config/s3storage/src/*"],
			"@config/prisma": ["libs/config/prisma/src"],
			"@config/prisma/*": ["libs/config/prisma/src/*"],
			"@config/app-cache": ["libs/config/app-cache/src"],
			"@config/app-cache/*": ["libs/config/app-cache/src/*"],
			"@constant/message": ["libs/constant/message/src"],
			"@constant/message/*": ["libs/constant/message/src/*"],
			"@constant/path": ["libs/constant/path/src"],
			"@constant/path/*": ["libs/constant/path/src/*"],
			"@constant/content": ["libs/constant/content/src"],
			"@constant/content/*": ["libs/constant/content/src/*"],
			"@constant/key": ["libs/constant/key/src"],
			"@constant/key/*": ["libs/constant/key/src/*"],
			"@module/otp": ["libs/module/otp/src"],
			"@module/otp/*": ["libs/module/otp/src/*"],
			"@module/mailer": ["libs/module/mailer/src"],
			"@module/mailer/*": ["libs/module/mailer/src/*"],
			"@module/signature": ["libs/module/signature/src"],
			"@module/signature/*": ["libs/module/signature/src/*"],
			"@module/app-jwt": ["libs/module/app-jwt/src"],
			"@module/app-jwt/*": ["libs/module/app-jwt/src/*"]
		}
	}
}

