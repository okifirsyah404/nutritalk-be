{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"resolveJsonModule": true,
		"paths": {
			"@nutritionist": ["apps/nutritionist/src"],
			"@nutritionist/*": ["apps/nutritionist/src/*"],
			"@common/": ["libs/@common"],
			"@common/*": ["libs/@common/*"],
			"@util": ["libs/@util"],
			"@util/*": ["libs/@util/*"],
			"@contract/": ["libs/@contract"],
			"@contract/*": ["libs/@contract/*"],
			"@infrastructure": ["libs/@infrastructure/"],
			"@infrastructure/*": ["libs/@infrastructure/*"],
			"@config/app-config": ["libs/app-config/src"],
			"@config/app-config/*": ["libs/app-config/src/*"],
			"@s3storage/s3storage": ["libs/s3storage/src"],
			"@s3storage/s3storage/*": ["libs/s3storage/src/*"],
			"@database/prisma": ["libs/prisma/src"],
			"@database/prisma/*": ["libs/prisma/src/*"],
			"@otp/otp": ["libs/otp/src"],
			"@otp/otp/*": ["libs/otp/src/*"],
			"@mail/mailer": ["libs/mailer/src"],
			"@mail/mailer/*": ["libs/mailer/src/*"],
			"@sign/signature": ["libs/signature/src"],
			"@sign/signature/*": ["libs/signature/src/*"],
			"@jwt/app-jwt": ["libs/app-jwt/src"],
			"@jwt/app-jwt/*": ["libs/app-jwt/src/*"],
			"@cache/app-cache": ["libs/app-cache/src"],
			"@cache/app-cache/*": ["libs/app-cache/src/*"],
			"@constant/constant": ["libs/@constant/src"],
			"@constant/constant/*": ["libs/@constant/src/*"]
		}
	}
}
