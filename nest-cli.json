{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/nutritionist/tsconfig.app.json",
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"introspectComments": true,
					"controllerKeyOfComment": "description"
				}
			}
		]
	},
	"monorepo": true,
	"generateOptions": {
		"spec": false
	},
	"language": "ts",
	"projects": {
		"nutritionist": {
			"type": "application",
			"root": "apps/nutritionist",
			"entryFile": "main",
			"sourceRoot": "apps/nutritionist/src",
			"generateOptions": {
				"spec": false
			},
			"compilerOptions": {
				"tsConfigPath": "apps/nutritionist/tsconfig.app.json",
				"deleteOutDir": true,
				"plugins": [
					{
						"name": "@nestjs/swagger",
						"options": {
							"introspectComments": true,
							"controllerKeyOfComment": "description",
							"classValidatorShim": true,
							"dtoFileNameSuffix": [
								".dto.ts",
								".entity.ts",
								".request.ts",
								".response.ts"
							]
						}
					}
				]
			}
		},
		"patient": {
			"type": "application",
			"root": "apps/patient",
			"entryFile": "main",
			"sourceRoot": "apps/patient/src",
			"compilerOptions": {
				"tsConfigPath": "apps/patient/tsconfig.app.json"
			}
		},
		"admin": {
			"type": "application",
			"root": "apps/admin",
			"entryFile": "main",
			"sourceRoot": "apps/admin/src",
			"compilerOptions": {
				"tsConfigPath": "apps/admin/tsconfig.app.json"
			}
		},
		"cron": {
			"type": "application",
			"root": "apps/cron",
			"entryFile": "main",
			"sourceRoot": "apps/cron/src",
			"compilerOptions": {
				"tsConfigPath": "apps/cron/tsconfig.app.json"
			}
		},
		"notification": {
			"type": "application",
			"root": "apps/notification",
			"entryFile": "main",
			"sourceRoot": "apps/notification/src",
			"compilerOptions": {
				"tsConfigPath": "apps/notification/tsconfig.app.json"
			}
		},
		"app-config": {
			"type": "library",
			"root": "libs/config/app-config",
			"entryFile": "index",
			"sourceRoot": "libs/config/app-config/src",
			"compilerOptions": {
				"tsConfigPath": "libs/config/app-config/tsconfig.lib.json"
			}
		},
		"app-cache": {
			"type": "library",
			"root": "libs/app-cache",
			"entryFile": "index",
			"sourceRoot": "libs/app-cache/src",
			"compilerOptions": {
				"tsConfigPath": "libs/app-cache/tsconfig.lib.json"
			}
		},
		"s3storage": {
			"type": "library",
			"root": "libs/config/s3storage",
			"entryFile": "index",
			"sourceRoot": "libs/config/s3storage/src",
			"compilerOptions": {
				"tsConfigPath": "libs/config/s3storage/tsconfig.lib.json"
			}
		},
		"prisma": {
			"type": "library",
			"root": "libs/config/prisma",
			"entryFile": "index",
			"sourceRoot": "libs/config/prisma/src",
			"compilerOptions": {
				"tsConfigPath": "libs/config/prisma/tsconfig.lib.json"
			}
		},
		"otp": {
			"type": "library",
			"root": "libs/module/otp",
			"entryFile": "index",
			"sourceRoot": "libs/module/otp/src",
