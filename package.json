    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@compodoc/compodoc": "^1.1.25",
    "@nestjs/cli": "^10.4.7",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "webpack-cli": "^5.1.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/apps/nutritionist/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@contract/contract(|/.*)$": "<rootDir>/libs/@contract/$1",
      "^@common/common(|/.*)$": "<rootDir>/libs/@common/$1",
      "^@util(|/.*)$": "<rootDir>/libs/@util/$1",
      "^@infrastructure/infrastructure(|/.*)$": "<rootDir>/libs/@infrastructure/$1",
      "^@config/app-config(|/.*)$": "<rootDir>/libs/app-config/src/$1",
      "^@s3storage/s3storage(|/.*)$": "<rootDir>/libs/s3storage/src/$1",
      "^@database/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
      "^@otp/otp(|/.*)$": "<rootDir>/libs/otp/src/$1",
      "^@mail/mailer(|/.*)$": "<rootDir>/libs/mailer/src/$1",
      "^@sign/signature(|/.*)$": "<rootDir>/libs/signature/src/$1",
      "^@jwt/app-jwt(|/.*)$": "<rootDir>/libs/app-jwt/src/$1",
      "^@cache/app-cache(|/.*)$": "<rootDir>/libs/app-cache/src/$1"
    }
  }
}
