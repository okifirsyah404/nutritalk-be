  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "conc  -c  \"cyan.bold,blue.bold,red.bold\" \"yarn:dev:*\"",
    "start:debug": "conc  -c  \"cyan.bold,blue.bold,red.bold\" \"yarn:debug:*\"",
    "start:staging": "conc  -c  \"cyan.bold,blue.bold,red.bold\" \"yarn:staging:*\"",
    "start:prod": "conc  -c  \"cyan.bold,blue.bold,red.bold\" \"yarn:prod:*\"",
    "build": "yarn build:patient && yarn build:nutritionist && yarn build:admin && yarn build:cron ",
    "build:patient": "nest build patient",
    "build:nutritionist": "nest build nutritionist",
    "build:admin": "nest build admin",
    "build:cron": "nest build cron",
    "dev:patient": "nest start --watch patient",
    "dev:nutritionist": "nest start --watch nutritionist",
    "dev:admin": "nest start --watch admin",
    "dev:cron": "nest start --watch cron",
    "debug:patient": "nest start --debug --watch patient",
    "debug:nutritionist": "nest start --debug --watch nutritionist",
    "debug:admin": "nest start --debug --watch admin",
    "debug:cron": "nest start --debug --watch cron",
    "staging:patient": "nest start patient",
    "staging:nutritionist": "nest start nutritionist",
    "staging:admin": "nest start admin",
    "staging:cron": "nest start cron",
    "prod:patient": "node dist/apps/patient/main",
    "prod:nutritionist": "node dist/apps/nutritionist/main",
    "prod:admin": "node dist/apps/admin/main",
    "prod:cron": "node dist/apps/cron/main",
    "meta:patient": "npx ts-node apps/patient/src/generate-metadata.ts",
    "meta:nutritionist": "npx ts-node apps/nutritionist/src/generate-metadata.ts",
    "meta:admin": "npx ts-node apps/admin/src/generate-metadata.ts",
    "compodoc": "npx compodoc -p tsconfig.json -s",
    "compodoc:patient": "npx compodoc -p apps/patient/tsconfig.app.json -s",
    "compodoc:nutritionist": "npx compodoc -p apps/nutritionist/tsconfig.app.json -s",
    "compodoc:admin": "npx compodoc -p apps/admin/tsconfig.app.json -s",
    "compodoc:cron": "npx compodoc -p apps/cron/tsconfig.app.json -s",
    "db:migrate": "yarn prisma migrate dev --schema prisma/schema",
    "db:migrate:prod": "yarn prisma migrate deploy --schema prisma/schema",
    "db:generate": "yarn prisma generate --schema prisma/schema",
    "db:reset": "yarn prisma migrate reset --schema prisma/schema",
    "db:seed": "yarn prisma db seed",
    "db:studio": "yarn prisma studio --schema prisma/schema",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nutritalk-be/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.685.0",
    "@aws-sdk/s3-request-presigner": "^3.645.0",
    "@fastify/static": "^7.0.4",
    "@nestjs/bull": "^10.2.2",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/microservices": "^10.4.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/platform-fastify": "^10.4.7",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^8.0.2",
    "@nestjs/throttler": "^6.2.1",
    "@prisma/client": "^5.22.0",
    "@swc/core": "^1.7.39",
    "@types/bcrypt": "^5.0.2",
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^6.4.16",
    "@types/randomstring": "^1.3.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.3",
    "cache-manager": "^5.7.6",
    "cache-manager-ioredis-yet": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "dbdocs": "^0.14.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "dotenv-expand": "^11.0.6",
    "ejs": "^3.1.10",
