}

// ------------------------------------------------------------------
// SIGNATURE MODEL
// ------------------------------------------------------------------
model Signature {
    id String @id @default(cuid())

    // Main Fields
    signature String @unique

    // Date Metadata
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt

    @@index([signature])
}
